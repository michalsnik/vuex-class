{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015"
    ],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
